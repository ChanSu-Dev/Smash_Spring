<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.smash.dao.IPatientDao">
	<select id="patientList" resultType="com.java.smash.dto.PatientDto">
		SELECT * FROM PATIENT WHERE
		employeeNumber = #{param1}
	</select>
<!-- 
	<select id="patientListbyId" resultType="com.java.smash.dto.PatientDto">
		SELECT * FROM PATIENT
		LEFT JOIN MEDIC ON MEDIC.id = #{param1} AND PATIENT.employeeNumber = MEDIC.employeeNumber
	</select>

 -->	<select id="patientEditList" resultType="com.java.smash.dto.PatientDto">
		SELECT * FROM PATIENT
		WHERE
		patientNumber = #{param1}
	</select>

	<insert id="patientInsert">
		INSERT INTO PATIENT VALUES ( #{param1}, #{param2},
		#{param3}, #{param4}, #{param5}, #{param6})
	</insert>

	<update id="patientUpdate">
		UPDATE PATIENT SET patientName = #{param1},
		patientDisease = #{param2}, patientStatus = #{param3}, patientProgram =
		#{param4} WHERE
		patientNumber = #{param5}
	</update>

	<delete id="patientDelete">
		DELETE FROM PATIENT WHERE patientNumber = #{param1}
	</delete>

	<select id="patientSelectList" resultType="com.java.smash.dto.PatientDto">
		SELECT * FROM PATIENT
		WHERE patientNumber = #{param1}
	</select>

</mapper>
